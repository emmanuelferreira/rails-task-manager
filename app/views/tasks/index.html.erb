<h1>My Tasks</h1>

<div class="tasks-container">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%if task.completed%>
          <i class="fas fa-check-square"></i>  - <%= link_to task.title, task_path(task), class: "btn btn-outline-secondary"%>
          - <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
        <%else%>
          <i class="fas fa-square"></i> - <%= link_to task.title, task_path(task), class: "btn btn-outline-secondary"%>
          <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
        <%end%>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to "Add a new task", new_task_path, class: "btn btn-outline-danger"%>

